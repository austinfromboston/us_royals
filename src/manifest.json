{
  "manifest_version": 2,

  "name": "US Royals",
  "version": "0.1.0",
  "description": "Give proper honor to the Shah and his family",

  "content_scripts": [{
    "js": ["content.js"],
    "matches": ["https://*/*", "http://*/*"]
  }],
  "browser_action": {
    "default_icon": {
      "16": "images/old_glorys_dark_crown_16.png",
      "32": "images/old_glorys_dark_crown_32.png",
      "64": "images/old_glorys_dark_crown_64.png"
    }
  },
  "icons": {
      "16": "images/old_glorys_dark_crown_16.png",
      "32": "images/old_glorys_dark_crown_32.png",
      "48": "images/old_glorys_dark_crown_48.png",
      "128": "images/old_glorys_dark_crown_128.png"
  }

}
